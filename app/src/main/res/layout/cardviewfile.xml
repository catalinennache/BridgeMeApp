<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  android:layout_height="100dp"     android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.cardview.widget.CardView

    android:layout_width="300dp"
    android:layout_height="100dp"


    android:layout_margin="4dp"
    android:layout_marginTop="20dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="3dp">


<TextView
    android:id="@+id/filename"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/noto_sans"
    android:text="Name: Cursuri.zip"
    android:textColor="#000000"
    android:translationX="10dp"
    android:translationY="10dp" />

<TextView
    android:id="@+id/filesize"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/noto_sans"
    android:text="Size: 24Mb"
    android:textColor="#000000"
    android:translationX="10dp"
    android:translationY="37dp" />

<ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="200dp"
    android:layout_height="24dp"
    android:clickable="false"
    android:progress="0"
    android:progressBackgroundTint="#1a73e8"
    android:progressTint="#1a73e8"
    android:translationX="50dp"
    android:translationY="65dp" />


</androidx.cardview.widget.CardView>
   </RelativeLayout>


